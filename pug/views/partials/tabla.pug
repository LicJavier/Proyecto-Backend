if DB_PRODUCTOS.length > 0
    div
        table 
            thead(class="table-auto m-10 text-2xl bg-green-400") 
                tr(class="p-5 m-5")
                    td(class="p-5 font-mono text-3xl") Nombre
                    td(class="p-5 font-mono text-3xl") Precio
                    td(class="p-5 font-mono text-3xl") Imagen
            tbody
            each producto in DB_PRODUCTOS
                tr 
                    td(class="p-5 font-mono text-3xl")=producto.name
                    td(class="p-5 font-mono text-3xl")=producto.price
                    td(class="p-5 font-mono text-3xl")
                        img(width="100px" height="100px" src=producto.img, alt="Imagen del Producto")
else
    h3(class="font-mono text-center text-3xl p-8") No se encontraron productos